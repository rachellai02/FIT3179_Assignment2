{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Share of adults with obesity of each country",
  "width": 800,
  "height": 500,
   "projection": {"type": "equirectangular"},
  "params": [
    {
      "name": "Year",
      "value": 2014,
      "bind": {"input": "range", "min": 2010, "max": 2014, "step": 1}
      }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/rachellai02/FIT3179_Assignment2/master/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
      "url": "https://raw.githubusercontent.com/rachellai02/FIT3179_Assignment2/master/data/continent-share-of-adults-defined-as-obese.csv"
      },
      "transform": [
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/rachellai02/FIT3179_Assignment2/master/js/ne_110m_admin_0_countries.topojson",
                "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as" : "geo"
        },
        {"filter": "datum.Year == Year"}
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "Percentage",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [5, 10, 15, 20, 25, 30, 35],
            "range": ["#ffff00", "#ffcc00", "#ffaa00", "#ff8800", "#ff6600", "#ff4400", "#cc0000", "#990000"]
          },
          "legend": {
            "title": "Share of obese adults (%)"
          }
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "Percentage", "type": "quantitative", "title": "Share of obese adults (%)"}
        ]
      }},
              {
      "data": {
        "url": "https://raw.githubusercontent.com/rachellai02/FIT3179_Assignment2/master/data/continent-share-of-adults-defined-as-obese.csv"
      },
     "layer": [
              {
      "transform": [
    {"filter": "datum.Year == Year"},
    {
      "calculate": "toNumber(datum.Percentage)",
      "as": "PercentageNumeric"
    },
    {
      "window": [
        {
          "op": "rank",
          "as": "ranking"
        }
      ],
      "sort": [
        {
          "field": "PercentageNumeric",
          "order": "descending"
        }
      ]
    },
    {
      "filter": "datum.ranking == 1"
    },
    {
      "calculate": "'Highest Share of Obese Adults: ' + datum['Country'] + ': ' + datum['Percentage'] + '%'",
      "as": "text_annotation"
    }
  ],
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 100,
        "dy": 0,
        "fill": "black"
      },
      "encoding": {
        "text": {
          "field": "text_annotation"
        }
      }
    }]
  }]
}
