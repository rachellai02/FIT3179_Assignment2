{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Mean BMI of Each Country Over the Years 2000-2016",
    "data": {
        "url": "https://raw.githubusercontent.com/rachellai02/FIT3179_Assignment2/master/data/agg-continent-mean-bmi-in-adult-males-females.csv"
    },
    "width": 800,
    "height": 500,
    "transform": [
        {
            "window": [
                {
                    "op": "count",
                    "as": "index"
                }
            ]
        },
        {
            "fold": [
                "Mean BMI 2000",
                "Mean BMI 2004",
                "Mean BMI 2008",
                "Mean BMI 2012",
                "Mean BMI 2016"
            ]
        },
        {
            "joinaggregate": [
                {
                    "op": "min",
                    "field": "value",
                    "as": "min"
                },
                {
                    "op": "max",
                    "field": "value",
                    "as": "max"
                },
                {
                    "op": "median",
                    "field": "value",
                    "as": "q2"
                }
            ],
            "groupby": [
                "key"
            ]
        },
        {
            "calculate": "(datum.value - datum.min) / (datum.max-datum.min)",
            "as": "norm_val"
        }
    ],
    "layer": [
        {
            "mark": {
                "type": "rule",
                "color": "#ccc"
            },
            "encoding": {
                "detail": {
                    "aggregate": "count"
                },
                "x": {
                    "field": "key"
                }
            }
        },
        {
            "mark": "line",
            "encoding": {
                "color": {
                    "type": "nominal",
                    "field": "Continent"
                },
                "strokeDash": {
                    "field": "Gender",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "Male",
                            "Female"
                        ],
                        "range": [
                            [
                                1,
                                0
                            ],
                            [
                                4,
                                2
                            ]
                        ]
                    },
                    "legend": {
                        "title": "Gender",
                        "values": [
                            "Male",
                            "Female"
                        ]
                    }
                },
                "detail": {
                    "type": "nominal",
                    "field": "index"
                },
                "opacity": {
                    "value": 0.3
                },
                "x": {
                    "type": "nominal",
                    "field": "key"
                },
                "y": {
                    "type": "quantitative",
                    "field": "norm_val",
                    "axis": null
                },
                "tooltip": [
                    {
                        "type": "nominal",
                        "field": "Entity",
                        "title": "Country"
                    },
                    {
                        "type": "quantitative",
                        "field": "value",
                        "title": "BMI"
                    },
                    {
                        "type": "nominal",
                        "field": "Gender",
                        "title": "Gender"
                    }
                ]
            }
        },
        {
            "encoding": {
                "x": {
                    "type": "nominal",
                    "field": "key"
                },
                "y": {
                    "value": 0
                }
            },
            "layer": [
                {
                    "mark": {
                        "type": "text",
                        "style": "label"
                    },
                    "encoding": {
                        "text": {
                            "field": "max",
                            "type": "quantitative"
                        }
                    }
                },
                {
                    "mark": {
                        "type": "tick",
                        "style": "tick",
                        "size": 8,
                        "color": "#ccc"
                    }
                }
            ]
        },
        {
            "encoding": {
                "x": {
                    "type": "nominal",
                    "field": "key"
                },
                "y": {
                    "value": 250
                }
            },
            "layer": [
                {
                    "mark": {
                        "type": "text",
                        "style": "label"
                    },
                    "encoding": {
                        "text": {
                            "field": "q2",
                            "type": "quantitative"
                        }
                    }
                },
                {
                    "mark": {
                        "type": "tick",
                        "style": "tick",
                        "size": 8,
                        "color": "#ccc"
                    }
                }
            ]
        },
        {
            "encoding": {
                "x": {
                    "type": "nominal",
                    "field": "key"
                },
                "y": {
                    "value": 500
                }
            },
            "layer": [
                {
                    "mark": {
                        "type": "text",
                        "style": "label"
                    },
                    "encoding": {
                        "text": {
                            "field": "min",
                            "type": "quantitative"
                        }
                    }
                },
                {
                    "mark": {
                        "type": "tick",
                        "style": "tick",
                        "size": 8,
                        "color": "#ccc"
                    }
                }
            ]
        }
    ],
    "config": {
        "axisX": {
            "domain": false,
            "labelAngle": 0,
            "tickColor": "#ccc",
            "title": null
        },
        "view": {
            "stroke": null
        },
        "style": {
            "label": {
                "baseline": "middle",
                "align": "right",
                "dx": -5
            },
            "tick": {
                "orient": "horizontal"
            }
        }
    }
}