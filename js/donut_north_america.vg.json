{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/rachellai02/FIT3179_Assignment2/master/data/continent-share-of-overweight-obese-others.csv"
  },
  "transform": [
    {"filter": "datum.Continent === 'North America'"}
  ],
  "encoding": {
    "theta": {
      "field": "Percentage",
      "type": "quantitative",
      "scale": {"type": "linear"},
      "stack": true
    },
    "color": {
      "field": "Status",
      "type": "nominal",
      "scale": {"range": ["red", "gray", "orange"]},
      "legend": null
    },
    "tooltip": [
      {"field": "Status", "type": "nominal", "title": "Status"},
      {"field": "Percentage", "type": "quantitative", "title": "Percentage (%)"}
    ]
  },
  "layer": [
    {"mark": {"type": "arc", "outerRadius": 100, "innerRadius": 60}},
    {
      "mark": {
        "type": "text",
        "radius": 70,
        "font": "Verdana"
      },
      "encoding": {
        "text": {"field": "Status", "type": "nominal"},
        "color": {"value": "black"}
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 12,
        "fontStyle": "bold",
        "color": "black",
        "font": "Verdana"
      },
      "encoding": {
        "text": {"field": "Continent", "type": "nominal"},
        "color": {"value": "black"}
      }
    }
  ],
  "config": {
    "view": {"stroke": null},
    "background": null
  }
}
