{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 400,
  "title": "Share of adult men with obesity vs daily supply of calories",
  "data": {
    "url": "https://raw.githubusercontent.com/rachellai02/FIT3179_Assignment2/master/data/continent-share-of-adult-men-overweight-or-obese-vs-daily-supply-of-calories.csv"
  },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    },
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }
    },
    {
      "name": "Year",
      "value": 2014,
      "bind": {
        "input": "range",
        "min": 2010,
        "max": 2014,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    },
    {
      "filter": "datum.Population >= Population_Above"
    },
    {
      "filter": "Year == null || datum.Year == Year"
    }
  ],
  "encoding": {
    "x": {
      "field": "Daily caloric supply",
      "type": "quantitative",
      "title": "Daily Caloric Supply (kcal)",
      "axis": {"tickCount": 7},
      "scale": {
        "domain": ["1500","4000"]
      }
    },
    "y": {
      "field": "Obese",
      "type": "quantitative",
      "title": "Share of obese adult men (%)",
      "axis": {"tickCount": 6}
    }
  },
  "layer": [
    {
      "params": [
        {
          "name": "grid",
          "select": "interval",
          "bind": "scales"
        },
        {
          "name": "continent_highlight",
          "select": {
            "type": "point",
            "fields": ["Continent"]
          },
          "bind":"legend"
        },
        {
          "name": "highlight",
          "select": {
            "type": "point",
            "on": "mouseover"
          }
        }
      ],
      "mark": {
        "type": "circle",
        "stroke": "black",
        "strokeWidth":1
      },
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000, 1000000000, 5000000000],
            "range": [50, 150, 300, 500, 750, 1100, 1500, 2000]
          },
          "legend": {"format": ".1s"},
          "title": "Population"
        },
        "color": {
          "field": "Continent",
          "type":"nominal",
          "scale": {
            "domain": ["Africa", "Asia", "Europe", "North America", "Oceania", "South America", "World"],
            "range": ["#1f77b4", "#FDE26C", "#FF964F", "#C23B22", "#9467bd", "#e377c2", "#7f7f7f"]
          },
          "title": "Continent"
        },
        "opacity": {
          "condition": {
            "param": "continent_highlight",
            "value": 0.7
          },
          "value": 0.05
        },
        "strokeOpacity": {
          "condition": [
            {
              "param": "highlight",
              "empty": false,
              "value": 1
            }
          ],
          "value": 0
        },
        "tooltip": [
          {
            "field": "Entity",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Daily caloric supply",
            "type": "quantitative",
            "title": "Daily Caloric Supply (kcal)",
            "format": ",.0f"
          },
          {
            "field": "Obese",
            "type": "quantitative",
            "title": "Share of obese adult men (%)"
          },
          {
            "field": "Population",
            "type": "quantitative",
            "format": ",.0f"
          },
          {
            "field": "Continent",
            "type": "nominal"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Entity", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Population'] > 100000000",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ],
  "config": {
    "view": {"stroke": null},
    "background": null
  }
}
